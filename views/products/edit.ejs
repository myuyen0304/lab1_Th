<%- include('../partials/header') %>
<div class="container mt-4">
  <h2>Sửa sản phẩm</h2>
  <form action="/products/edit/<%= product._id %>" method="POST">
    <div class="mb-3">
      <label class="form-label">Tên:</label>
      <input type="text" class="form-control" name="name" value="<%= product.name %>" required />
    </div>
    <div class="mb-3">
      <label class="form-label">Giá:</label>
      <input type="number" class="form-control" name="price" value="<%= product.price %>" required />
    </div>
    <div class="mb-3">
      <label class="form-label">Số lượng:</label>
      <input type="number" class="form-control" name="quantity" value="<%= product.quantity %>" required />
    </div>
    <div class="mb-3">
      <label class="form-label">Nhà cung cấp:</label>
      <select class="form-select" name="supplierId" required>
        <% suppliers && suppliers.forEach(supplier => { %>
          <option value="<%= supplier._id %>" <%= product.supplierId && product.supplierId.toString() === supplier._id.toString() ? 'selected' : '' %>><%= supplier.name %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="/products" class="btn btn-secondary ms-2">Quay lại</a>
  </form>
</div>
<%- include('../partials/footer') %>
